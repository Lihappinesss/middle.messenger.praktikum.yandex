{
  "extends": [
    "stylelint-config-sass-guidelines"
  ],

  "rules": {
    "color-hex-case": "lower",
    "string-quotes": "single",
    "import-notation": null,
    "indentation": null,
    "scss/selector-no-redundant-nesting-selector": null,
    "scss/at-mixin-pattern": null
  },
  "ignoreFiles": [
    "dist/*",
    "node_modules/*",
    ".parcel-cache/*",
    "src/index.sass"
  ]
}
